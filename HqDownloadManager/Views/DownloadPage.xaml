<Page
    x:Class="HqDownloadManager.Views.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HqDownloadManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:download="using:HqDownloadManager.Controller.ViewModel.Download"
    xmlns:models="using:HqDownloadManager.Core.Models"
    mc:Ignorable="d">
    <Page.Resources>
        <download:DownloadListViewModel x:Key="DownloadListView" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button 
            x:Name="BtnInitDownload" 
            Content="Iniciar Download"
            FontSize="16"
            Width="210"
            Height="35"
            VerticalContentAlignment="Center"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Click="BtnInitDownload_Click"/>
        <Button 
            x:Name="BtnPauseDownload" 
            Content="Pausar/Resumir Download"
            FontSize="16"
            Width="210"
            Height="35"
            VerticalContentAlignment="Center"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="215,0,0,0"
            Click="BtnPauseDownload_Click"/>
        <Button 
            x:Name="BtnStopDownload" 
            Content="Parar Download"
            FontSize="16"
            Width="210"
            Height="35"
            VerticalContentAlignment="Center"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="430,0,0,0"
            Click="BtnStopDownload_Click"/>
        <ListView
            x:Name="DownloadList"
            ItemsSource="{Binding DownloadList, Source={StaticResource DownloadListView}}"
            SelectedItem="{Binding ActualDownload, Source={StaticResource DownloadListView}, Mode=TwoWay}"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Width="770"
            Margin="0,40,0,0">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <Grid>
                        <Image 
                            Source="{Binding Hq.CoverSource}" 
                            Stretch="Fill"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Width="80" 
                            Height="110"
                            Margin="3,0,0,5"
                            ToolTipService.ToolTip="{Binding Hq.Title}"/>
                        <TextBox 
                            IsReadOnly="True" 
                            Text="{Binding Hq.Title}" 
                            TextWrapping="Wrap" 
                            Width="600"
                            Height="75"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="85,0,0,0"
                            BorderBrush="{x:Null}" 
                            Foreground="Black" 
                            FontSize="19" />
                        <ProgressBar
                            x:Name="ChapterProgress"
                            Width="600"
                            Height="10"
                            Minimum="0"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Margin="85,0,0,20"/>
                        <ProgressBar
                            x:Name="PageProgress"
                            Width="600"
                            Height="10"
                            Minimum="0"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Margin="85,0,0,5" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem x:Name="Deleteitem" Text="Excluir da lista de downloads" Click="Deleteitem_Click" />
                </MenuFlyout>
            </ListView.ContextFlyout>
        </ListView>

        <SplitView 
            x:Name="DetailsManga"
           IsPaneOpen="True"            
           DisplayMode="Inline"
           OpenPaneLength="550"
           PanePlacement="Right">
            <SplitView.Pane>
                <Grid>
                    <Image 
                        Source="{Binding ActualDownload.Hq.CoverSource, Source={StaticResource DownloadListView}}" 
                        Stretch="Fill"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Width="180" 
                        Height="240"
                        Margin="5"
                        ToolTipService.ToolTip="{Binding ActualDownload.Hq.Title, Source={StaticResource DownloadListView}}"/>
                    <TextBox 
                        Visibility="Visible" 
                        IsReadOnly="True" 
                        Text="{Binding ActualDownload.Hq.Title, Source={StaticResource DownloadListView}}" 
                        TextWrapping="Wrap" 
                        Width="360"
                        Height="65"
                        VerticalAlignment="Top"
                        Margin="180,5,0,0"
                        BorderBrush="{x:Null}" 
                        Foreground="Black" 
                        FontSize="19" >
                    </TextBox>
                    <TextBox 
                        Visibility="Visible" 
                        IsReadOnly="True" 
                        Text="{Binding ActualDownload.Hq.Author, Source={StaticResource DownloadListView}}" 
                        TextWrapping="Wrap" 
                        Width="360"
                        Height="26"
                        VerticalAlignment="Top"
                        Margin="180,70,0,0"
                        BorderBrush="{x:Null}" 
                        Foreground="Black" 
                        FontSize="16" >
                    </TextBox>
                    <TextBox 
                        Visibility="Visible" 
                        IsReadOnly="True" 
                        Text="{Binding ActualDownload.Hq.Synopsis, Source={StaticResource DownloadListView}}" 
                        TextWrapping="Wrap" 
                        Width="360"
                        Height="148"
                        VerticalAlignment="Top"
                        Margin="180,100,0,0"
                        BorderBrush="{x:Null}" 
                        Foreground="Black" 
                        FontSize="16" >
                    </TextBox>
                    <ListView
                         x:Name="HqChapters" 
                        ItemsSource="{Binding ActualDownload.Hq.Chapters, Source={StaticResource DownloadListView}}"  
                        DisplayMemberPath="Title"
                        Margin="5,270,0,0" />

                </Grid>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
